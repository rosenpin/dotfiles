[module/pomodoro]
type = custom/script
click-right = i3-gnome-pomodoro toggle
click-left = gnome-pomodoro
click-middle = i3-gnome-pomodoro start_stop
exec = echo "$(i3-gnome-pomodoro status --always --no-seconds --icon-text "‚è∞")"
interval = 1

[module/agenda]
type = custom/script
exec = i3-agenda -c ~/.google_credentials.json
click-left = chromium https://calendar.google.com/calendar/r/day
interval = 60


[module/chour]
type = custom/script
click-left = date "+%H:%M:%S %d/%m"
exec = date "+%H:%M:%S %d/%m"
interval = 1

[module/spotify-next]
type = custom/script
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
exec = echo ‚è≠

[module/spotify-prev]
type = custom/script
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.prev
exec = echo ‚èÆÔ∏è

[module/spotify-play]
type = custom/script
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
exec = echo "‚ñ∂"

